{
  "compilerOptions": {

    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "esnext.asynciterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "types": ["@cloudflare/workers-types"],
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "argon2": ["argon2-browser"]
    },
    "resolveJsonModule": true,
  },
  "include": ["app/**/*"]
}
